year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citHeader("To cite the cfbplotR R package in publications, use:")

citEntry(entry = "Misc",
         author = personList(
         as.person("Jared Lee"),
         as.person("Sebastian Carl")
         ),
         title = "cfbplotR: The SportsDataverse's R Package for College Football Plotting.",
         url = c("https://cfbplotR.sportsdataverse.org/"),
         year = year,
         note = note,
         textVersion = paste(
    "Jared Lee and Sebastian Carl. cfbplotR: The SportsDataverse's R Package for College Football Plotting.",
    "Retrieved from https://cfbplotR.sportsdataverse.org/"
  )
)
